
<h1 style="padding-left: 16px;">Overview of conversations</h1>
<div class="screen-container">

  <div class="conversation-cards">
    <div class="conversation-column">
<ul class='conversation-list'>
  <% @conversations.each do |conversation| %>
    <div>
      <% if conversation.notifications.where(user: current_user).count > 0 %>
        <p class="unread-conversation" style='padding-bottom: 10px;'><%= conversation.name %></p>

          <ul class="conversation-list unread-conversation">
            <% conversation.conversation_members.each do |conversation_member| %>
              <% next if conversation_member.user == current_user  %>
              <li class='conversation-item'>
                <span><%= cl_image_tag conversation_member.user.photo, class: "avatar dropdown-toggle" %></span>
                <span><%= link_to conversation_member.user.first_name + " " + conversation_member.user.last_name, conversation_path(conversation)%></span><br>
                <span class="unread-conversation"> <%= conversation.messages.last.content[0,20] + '...' %></span>
                <hr>
              </li>
            <% end %>

      <% else %>
        <p style='padding-bottom: 10px;'><%= conversation.name %></p>

        <ul class="conversation-list">
          <% conversation.conversation_members.each do |conversation_member| %>
            <% next if conversation_member.user == current_user  %>
            <li class='conversation-item'>
              <span><%= cl_image_tag conversation_member.user.photo, class: "avatar dropdown-toggle" %></span>
              <span><%= link_to conversation_member.user.first_name + " " + conversation_member.user.last_name, conversation_path(conversation)%></span><br>
              <span> <%= conversation.messages.last.content[0,20] + '...' %></span>
              <hr>
            </li>
        <% end %>
    <% end %>
    </ul>
    </li>

  <% end %>
</ul>
  </div>
  </div>
   </div>

<p> <%= link_to "New Conversation", new_conversation_path %> </p>

<p> <%= link_to "Home", root_path %> </p>

<div>
  <%= link_to "Updates", status_updates_path %>
  <%= link_to "Conversations", conversations_path %>
  <%= link_to "Calendar", slots_path %>
  <%= link_to "Circles", circles_path %>
</div>


