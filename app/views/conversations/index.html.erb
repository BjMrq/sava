
<h1 style="padding-left: 16px;">Overview of conversations</h1>

  <div class="conversation">
        <% @conversations.each do |conversation| %>

          <div>

            <% if conversation.notifications.where(user: current_user).count > 0 %>
              <div class="conversation-cards">

                <div class="unread-conversation">
                  <% conversation.conversation_members.each do |conversation_member| %>
                    <% next if conversation_member.user == current_user  %>
                    <div>
                      <span><%= cl_image_tag conversation_member.user.photo, width: 250, crop: "scale", class: "avatar dropdown-toggle" %></span>
                      <span><%= link_to conversation_member.user.first_name + " " + conversation_member.user.last_name, conversation_path(conversation)%></span>
                      <span class="unread-conversation"> <%= conversation.messages.last.content[0,40] + '...' %></span>
                      <span> <%= conversation.updated_at.strftime("%d.%m.%y") %> </span>
                      <span> <%= image_tag("delete.svg") %> </span>
                    </div>
                  <% end %>

              </div>



            <% else %>
              <div class="conversation-cards">
                <% conversation.conversation_members.each do |conversation_member| %>
                  <% next if conversation_member.user == current_user  %>
                  <div>
                    <span><%= cl_image_tag conversation_member.user.photo, width: 250, crop: "scale", class: "avatar dropdown-toggle" %></span>
                    <span><%= link_to conversation_member.user.first_name + " " + conversation_member.user.last_name, conversation_path(conversation)%></span>
                    <span> <%= conversation.messages.last.content[0,40] + '...' %></span>
                    <span> <%= conversation.updated_at.strftime("%d.%m.%y") %> </span>
                    <span> <%= image_tag("delete.svg") %> </span>
                  </div>
              <% end %>

          <% end %>

      </div>
      </div>
    <% end %>
  </div>

<p> <%= link_to "New Conversation", new_conversation_path %> </p>

<p> <%= link_to "Home", root_path %> </p>

<div>
  <%= link_to "Updates", status_updates_path %>
  <%= link_to "Conversations", conversations_path %>
  <%= link_to "Calendar", slots_path %>
  <%= link_to "Circles", circles_path %>
</div>
