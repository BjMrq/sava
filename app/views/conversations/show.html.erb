<div class="main-container">
    <h1> <%= link_to "Messages/", conversations_path %>
      <%= @conversation.conversation_members[1].user.first_name %>
    </h1>

  <div class="conversations-container">
    <% @conversation.messages.each_with_index do |message, index| %>
    <div>
      <% if @conversation.messages[index - 1].created_at.strftime("%B %d, %y") != message.created_at.strftime("%B %d, %y") %>
        <div class="message-date">
          <hr>
          <p><span> <%= message.created_at.strftime("%B %d, %y") %> </span>
            </p>
        </div>


      <% end %>
      <%= render 'messages/card', message: message  %>
    </div>
    <% end %>
  </div>

  <div class="messages-new">
    <%= render 'messages/form', message: @message, conversation: @conversation %>
  </div>

  <%= link_to "Conversations overview", conversations_path %>

</div>
