<div class="d-flex">
  <%= cl_image_tag message.user.photo, class: "avatar" %>
  <div class="message-content">
    <div class="name-time d-flex">
      <p><%= message.user.fullname %></p>
      <p><%= message.created_at.strftime("%l:%M %p") %></p>
    </div>
    <p><%= message.content %></p>
  </div>
</div>


<hr>
