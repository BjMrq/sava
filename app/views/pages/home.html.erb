<div class="homepage-container">
  <div class="homepage-banner">
    <div>
      <h1 style="padding-left: 0px;"> Hi <%= current_user.first_name %></h1>
      <p>how are you feeling?</p>
    </div>
  </div>
  <div class="homepage-card">
    <div class="homepage-card-details">

    </div>

    <h3>Milestones of <%=User.find(@slots.first.user_id).first_name%></h3>
    <p>Diagnosis: XX, in treatment for 7 days</p>
    <p>Next milestone: intense chemo in 5 days </p>
<br>
    <h3>Your next appointments</h3>
    <div>
      <div>
      <% @slots.each do |slot|%>
        <% if slot.booked == true %>
        <div class="homepage-appointment homepage-appointment-img">
          <div class="d-flex">
            <%= image_tag("icon-clock.svg") %>
            <span> <%=slot.date%> a </span>
            <span>t <%=slot.hour%>h - <%=(slot.hour + 1)%>h</span>
          </div>
            <div class="d-flex">
             <%= cl_image_tag(User.find(slot.booker_id).photo,width: 25, height:25, class:"appointment-avatar") %>
            <span><%=User.find(slot.booker_id).first_name%></span>
            </div>
        </div>
        <% end %>
      <% end %>
<br>
      <h3>Latest update</h3>
      <div>
        <div>
          <div class="homepage-appointment">
            <div class="d-flex">
              <span> <%=StatusUpdate.last.title%></span>
            </div>
              <div class="d-flex">
              <span> <%= StatusUpdate.last.content[0,200] + '...' %></span>
              <span><%=cl_image_tag(StatusUpdate.last.photo, height: 150, width: 120, crop: :fill)%></span>
              </div>
          </div>
  </div>



<div>
  <%= link_to "Updates", status_updates_path %>
  <%= link_to "Conversations", conversations_path %>
  <%= link_to "Calendar", slots_path %>
  <%= link_to "Circles", circles_path %>
</div>

</div>
